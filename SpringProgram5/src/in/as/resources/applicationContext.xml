<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

         <bean class="in.as.beans.Address" id="addId">
               <property name="houseno" value="136" />
               <property name="city" value="Indore" />
               <property name="pincode" value="452010" />
         </bean>
         
         <bean class="in.as.beans.Student" id="stdId">
             <property name="name" value="Ankit" />
             <property name="rollno" value="13" />
             <property name="address" ref="addId" />
         </bean>

</beans>