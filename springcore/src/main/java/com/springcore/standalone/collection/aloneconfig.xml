 <entry key="Hibernate Framework" value="1000" />
 </util:map>
 
   <bean class="com.springcore.standalone.collection.Person"
   name="person1">
   <property name="friends" ref="myfriends" />
     <!--  <ref bean="myfriends" /> -->
   <property name="feestructure" ref="fees" />
   
   </bean>
   
   
   
 </beans> 